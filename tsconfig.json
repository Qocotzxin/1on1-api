{
    "$schema": "https://json.schemastore.org/tsconfig",
    "display": "1on1 REST API",
    "compilerOptions": {
        "lib": [
            "es2022"
        ],
        "module": "ESNext",
        "target": "es2022",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "moduleResolution": "node",
        "rootDir": "./src",
        "outDir": "./build"
    }
}